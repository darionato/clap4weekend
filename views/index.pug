doctype html
html
    head
        title= title
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.3.1/css/bulma.min.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css')
    body
        section.hero.is-success.is-fullheight.is-bold
            .hero-head
                header.nav
                    .container
                        .nav-left
                            div.nav-item
                                h1= title
                        span.nav-toggle
                            span
                            span
                            span
                        .nav-right.nav-menu
                            a.nav-item.is-active Home
                            a.nav-item Clap
                            span.nav-item
                                a.button.is-success.is-inverted(href='https://github.com/darionato/clap4weekend')
                                    span.icon
                                        i.fa.fa-github
                                    span Download
            .hero-body
                .container.has-text-centered
                    h1.title=  counter
                    h2.subtitle= info
            .hero-foot
                nav.tabs.is-boxed.is-fullwidth
                    .container
                        ul
                            li.is-active
                                a About
                            li
                                a Contacts
                            li
                                a Clap
